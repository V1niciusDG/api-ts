{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs", 
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
},
  "include": [
    "./src/**/*.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
